{
  "name": "job-radar",
  "version": "1.0.0",
  "description": "Job Radar & Pipeline Tracker - Discovery-centric job hunting tool",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
